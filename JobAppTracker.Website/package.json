{
	"name": "jobapptracker",
	"version": "1.0.0",
	"scripts": {
		"css": "run-s css:compile css:prefix css:minify",
		"css:compile": "node-sass --output-style expanded --source-map true -o wwwroot/css --include-path \"node_modules\" Scss",
		"css:prefix": "postcss -u autoprefixer --autoprefixer.browsers 'ie 10, > 5%' -r wwwroot/css/*.css",
		"css:minify": "cleancss --level 1 --source-map --output wwwroot/css/app.min.css wwwroot/css/app.css",
		"js": "webpack",
		"watch": "run-p watch:css watch:js",
		"watch:css": "nodemon -e scss -x \"npm run css\"",
		"watch:js": "nodemon -e ts -x \"npm run js\""
	},
	"dependencies": {
		"@types/bootstrap": "^3.3.34",
		"@types/crossroads": "0.0.29",
		"@types/es6-promise": "0.0.32",
		"@types/history": "^4.6.0",
		"@types/jquery": "^3.2.6",
		"@types/knockout": "^3.4.41",
		"@types/react-router": "^4.0.14",
		"@types/requirejs": "^2.1.29",
		"@types/signals": "0.0.17",
		"bootstrap": "^3.3.7",
		"bundle-loader": "^0.5.5",
		"crossroads": "^0.12.2",
		"event-source-polyfill": "0.0.9",
		"extract-text-webpack-plugin": "^3.0.0",
		"file-loader": "^0.11.2",
		"font-awesome": "^4.7.0",
		"history": "^4.6.3",
		"isomorphic-fetch": "^2.2.1",
		"jquery": "^3.2.1",
		"knockout": "^3.4.2",
		"raw-loader": "^0.5.1",
		"signals": "^1.0.0",
		"style-loader": "^0.18.2",
		"url-loader": "^0.5.9"
	},
	"devDependencies": {
		"autoprefixer": "^7.1.2",
		"awesome-typescript-loader": "^3.2.1",
		"clean-css-cli": "^4.1.6",
		"node-sass": "^4.5.3",
		"nodemon": "^1.11.0",
		"npm-run-all": "^4.0.2",
		"postcss-cli": "^4.1.0",
		"source-map-loader": "^0.2.1",
		"typescript": "^2.4.1",
		"uglify-js": "^3.0.24",
		"uglifyjs-webpack-plugin": "^0.4.6",
		"webpack": "^3.1.0",
		"webpack-bundle-analyzer": "^2.8.2"
	}
}
